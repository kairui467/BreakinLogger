<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp"
              android:background="@color/color_layout_bg"
        >

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <EditText
                android:id="@+id/spinner_edittext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />

        <Button
                android:id="@+id/spinner_addbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"
                android:onClick="spOnClick"
                style="@style/style_gre_button"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            style="@style/style_layout"
            >

        <ListView
                android:id="@+id/spinner_listView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/style_btm_layout"
            >

        <Button
                android:id="@+id/spinnrt_backbutton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:onClick="spOnClick"
                style="@style/style_red_button"
                />

    </LinearLayout>
</LinearLayout>