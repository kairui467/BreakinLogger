<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle"><!--圆角-->
            <!--过渡色-->
            <gradient android:startColor="#9D0A04" android:centerColor="#B30804" android:endColor="#C90E0D" android:angle="270"/>
            <!--圆角样式-->
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#9D0A04" android:centerColor="#B30804" android:endColor="#C90E0D" android:angle="270"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#C90E0D" android:centerColor="#B30804" android:endColor="#9D0A04" android:angle="270"></gradient>
            <corners android:radius="3dp"/>
        </shape>
    </item>
</selector>